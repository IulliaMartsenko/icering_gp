{
    "compilerOptions": {
        "strictNullChecks": false,
        "noEmitOnError": false,
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": "src",
        "outDir": "./build/",
        "noImplicitAny": false,
        "sourceMap": true,
        "module": "ESNext",
        "target": "esnext",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUncheckedIndexedAccess": true,
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
        }
    }
}