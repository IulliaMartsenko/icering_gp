{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "./build/",
        "noImplicitAny": false,
        "sourceMap": true,
        "module": "ESNext",
        "target": "es5",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}